<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.raywenderlich.android.rwdc2018">

  <uses-permission android:name="android.permission.INTERNET" />

  <application
    android:name=".app.RWDC2018Application"
    android:allowBackup="false"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity
      android:name=".ui.main.MainActivity"
      android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <service
      android:name=".service.PhotosJobService"
      android:enabled="true"
      android:exported="false"
      android:permission="android.permission.BIND_JOB_SERVICE" />
    <service
      android:name=".service.LogJobService"
      android:enabled="true"
      android:exported="false"
      android:permission="android.permission.BIND_JOB_SERVICE" />
    <service
      android:name=".service.DownloadIntentService"
      android:exported="false" />
    <service
      android:name=".service.FetchIntentService"
      android:exported="false" />
    <service
      android:name=".service.SongService"
      android:enabled="true"
      android:exported="false" />
  </application>

</manifest>